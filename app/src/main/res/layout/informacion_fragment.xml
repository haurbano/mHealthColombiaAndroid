<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:src="@drawable/headershort"
        android:background="@drawable/headershort"/>

    <TextView
        android:id="@+id/titulo"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Información"
        android:textSize="@dimen/TamañoTiulos"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/header"
        android:paddingBottom="30dp"/>

    <LinearLayout
        android:layout_below="@id/header"
        android:id="@+id/Sana"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/sanalogo"/>

        <TextView
            android:textColor="#d2000000"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/InformacionSana"
            android:textSize="17sp"/>


        </LinearLayout>

    <View
        android:id="@+id/div"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffff6129"
        android:layout_below="@+id/Sana"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_below="@id/div"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logohacka"
            />

        <TextView
            android:textColor="#d2000000"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/InformacionMhealth"
            android:textSize="17sp"/>
    </LinearLayout>



</RelativeLayout>

</ScrollView>